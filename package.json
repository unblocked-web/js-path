{
  "name": "@unblocked-web/js-path",
  "version": "2.0.0-alpha.1",
  "description": "The Serialization format to reference Paths to elements/nodes and properties in the DOM",
  "scripts": {
    "prepare": "husky install",
    "build": "pwd && yarn tsc && shx cp package.build.json build/package.json && cd ./build && yarn install -focus",
    "build:dist": "shx rm -rf build-dist && tsc -b tsconfig.dist.json && yarn copy:dist",
    "tsc": "tsc -b -i tsconfig.json",
    "watch": "tsc -b -i -w tsconfig.json",
    "lint": "eslint --cache ./"
  },
  "repository": "git@github.com:unblocked-web/js-path.git",
  "author": "Ulixee",
  "contributors": [
    "Caleb Clark",
    "Blake Byrnes"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/unblocked-web/js-path/issues"
  },
  "homepage": "https://ulixee.org/unblocked",
  "engines": {
    "node": ">=14.17.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/node": "^14.17.9",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.1.0",
    "@ulixee/commons": "^1.5.11",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-monorepo-cop": "^1.0.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.1",
    "lint-staged": "^10.5.2",
    "shx": "^0.3.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "typescript": "~4.5.5"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
